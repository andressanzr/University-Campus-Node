<%- include("./layouts/header", {title:"Administrar Usuarios"}) %>
<%- include("./layouts/navbarAdmin", { activo : "adminUsers"}) %>

<div class="container text-center ">
    <h1>Hola <%= userSession.nombre %>!</h1>
    <% if(message.length == 1) { %>

    <div class="alert alert-<%= tipo %> alert-dismissible fade show" role="alert" style="margin: auto;">
        <%= message  %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <% } %>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <% usersList.map(userMap=>{ %>
        <%- include("./templates/userTable", {user: userMap}); %>
        <% }) %>
    </tbody>
</table>
<a href="/addUserAdmin"><button type="button" class="btn btn-dark">Añadir usuarios</button></a>
<form action="/fileUpload/users" method="post" enctype="multipart/form-data" style="margin-top: 20px;">
    <input type="file" name="file">
    <button class="btn btn-dark" type="submit">Añadir usuarios desde .csv</button>
</form>